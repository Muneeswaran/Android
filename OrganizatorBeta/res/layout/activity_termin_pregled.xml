<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TerminPregled" >
<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout 
        android:id="@+id/llTerminPregled1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:id="@+id/tvTerminPregledNaslov"
        android:textStyle="bold"
        android:textSize="25sp"
        android:maxLines="4"
        android:gravity="fill_horizontal"
        android:autoLink="web"
        android:linksClickable="true"
        android:textColorLink="@android:color/black"/>
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTerminPregledSati"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"/>
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTerminPregledDatum"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"/>
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTerminPregledMjesto"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"/>
    
    <LinearLayout 
        android:id="@+id/llTerminPregled2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTerminPregledKalendar"
        android:textColor="@color/bijelo"
        android:paddingLeft="5dp"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTerminPregledSadrzaj"
        android:layout_margin="5dp"
        android:autoLink="web"
        android:linksClickable="true"
        android:textColorLink="@android:color/black"/>
        
    </LinearLayout>
    </LinearLayout>
</ScrollView>

</LinearLayout>
