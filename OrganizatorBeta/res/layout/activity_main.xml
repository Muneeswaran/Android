<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >
<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/holo_blue_dark"
         />

    <Button
        android:id="@+id/bGlavniNoviKontakt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="klik"
        android:text="@string/novi_kontakt" />

    <Button
        android:id="@+id/bGlavniKontakti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="klik"
        android:text="@string/kontakti" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/holo_blue_dark" />

    <Button
        android:id="@+id/bGlavniNoviTermin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="klik"
        android:text="@string/novi_termin" />

    <Button
        android:id="@+id/bGlavniTermini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="klik"
        android:text="@string/termini" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/holo_blue_dark" />

    <Button
        android:id="@+id/bGlavniNovaBiljeska"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="klik"
        android:text="@string/nova_biljeska" />

    <Button
        android:id="@+id/bGlavniBiljeske"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="klik"
        android:text="@string/biljeske" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/holo_blue_dark" />
    </LinearLayout>
</ScrollView>
</LinearLayout>
