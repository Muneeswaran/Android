<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActMain" >

    <TextView
        android:id="@+id/tvMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/welcome" 
        android:textSize="26sp"/>

    <Button
        android:id="@+id/bMainSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bMainBucket"
        android:layout_alignRight="@+id/bMainBucket"
        android:layout_below="@+id/bMainBucket"
        android:layout_marginTop="18dp"
        android:text="@string/settings"
        android:textSize="26sp"
        android:onClick="klik" />

    <Button
        android:id="@+id/bMainBucket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:text="@string/bucket_list" 
        android:textSize="26sp"
        android:onClick="klik" />

    <Button
        android:id="@+id/bMainAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bMainSettings"
        android:layout_alignRight="@+id/bMainSettings"
        android:layout_below="@+id/bMainSettings"
        android:layout_marginTop="20dp"
        android:text="@string/about" 
        android:textSize="26sp"
        android:onClick="klik" />

</RelativeLayout>